.current-release
  width 80%
  margin auto
  box-shadow 0 0 4px #000
  padding 2em
  position relative

  li
    list-style-type disc

  .release-dismiss
    position absolute
    right 1em
    top 1em
    font-weight bold
    font-size 2em

.comment-text
  li
    list-style-type disc
  p 
    margin-bottom 1.5rem

.post-content
  li
    list-style-type disc
  p 
    margin-bottom 1.5rem

q::after { 
    content: " - Remember this";
    background-color: yellow;
    color: red;
    font-weight: bold;
}