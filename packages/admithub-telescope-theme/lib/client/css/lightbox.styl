.g-header-wrap
  position absolute
  z-index 13

.custom-lightbox-banner
  position fixed
  background-color white
  width 80%
  margin 0 auto
  left 0
  right 0
  color color-black
  margin-top 4rem 
  z-index 12
  padding-left 45px
  padding-right 45px
  padding-top 15px
  padding-bottom 20px
  h3
    color  #26061C
    text-align center
    font-size 30pt
    padding-top 30px
  @media only screen and (max-width: 645px)
    margin-top -5rem
    h3
      font-size 25px
  @media only screen and (max-width: 350px)
    z-index 100
    width 100%
    padding-left 15px
    padding-right 40px
    p
      font-size 15px
  @media only screen and (min-width: 1150px)
    width 50%
  p
    color #8C878A
  p.pg-signup-copy
    font-style italic
    text-align center
  .button.btn.btn-primary
    border-radius 0px
    font-size 14pt
    height 43px !important
    margin-left 5px
  
a.pg-hide-login-form-x
